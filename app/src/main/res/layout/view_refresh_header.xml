<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.panda.usecar.app.bga.PandaRefreshView
        android:id="@+id/panda_refersh"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <!--大背景-->
        <ImageView
            android:id="@+id/iv_background"
            android:layout_width="550dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:src="@mipmap/refresh_bg" />


        <!--小云-->
        <ImageView
            android:id="@+id/iv_small_cloud"
            android:layout_width="30dp"
            android:layout_height="7dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            android:src="@mipmap/refresh_small_cloud" />

        <!--大云-->
        <ImageView
            android:id="@+id/iv_big_cloud"
            android:layout_width="54dp"
            android:layout_height="7dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/refresh_big_cloud" />

        <!--太阳-->
        <ImageView
            android:id="@+id/iv_sun"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_gravity="right"
            android:layout_marginRight="76dp"
            android:layout_marginTop="11dp"
            android:src="@mipmap/refresh_sun" />

        <!--路标-->
        <ImageView
            android:id="@+id/iv_route"
            android:layout_width="32dp"
            android:layout_height="41dp"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="18dp"
            android:layout_marginRight="90dp"
            android:src="@mipmap/refresh_route" />

        <!--汽车-->
        <ImageView
            android:id="@+id/iv_car"
            android:layout_width="92dp"
            android:layout_height="46dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="11dp"
            android:layout_marginLeft="-92dp"
            android:src="@mipmap/refresh_car" />

    </com.panda.usecar.app.bga.PandaRefreshView>

</LinearLayout>